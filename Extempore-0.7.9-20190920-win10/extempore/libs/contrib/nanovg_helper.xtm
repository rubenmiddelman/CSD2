    (nvgMoveTo path x1 y1)
    (nvgBezierTo path cx1 cy1 cx2 cy2 x2 y2)))

(bind-func xtm_add_quad
  (lambda (path x1:i64 y1:i64 cx:i64 cy:i64 x2:i64 y2:i64)
    (nvgMoveTo path (i64tof x1) (i64tof y1))
